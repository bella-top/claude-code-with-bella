{
  "env": {
    "ANTHROPIC_BASE_URL": "YOUR DOMAIN, eg http://example.bela-openapi.com",
    "ANTHROPIC_AUTH_TOKEN": "YOUR API KEY",
    "CLAUDE_CODE_SUBAGENT_MODEL": "claude-4.5-sonnet",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-4.5-sonnet",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4.1",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-3-5-haiku",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "20000"
  },
  "enableAllProjectMcpServers": true,
  "alwaysThinkingEnabled": true,
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Read(**)",
      "Grep(**)",
      "Glob(**)",
      "LS(**)",

      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(git:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(touch:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",

      "Bash(make:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(javac:*)",
      "Bash(java:*)",
      "Bash(mvn:*)",
      "Bash(gcc:*)",
      "Bash(g++:*)",

      "Bash(npm run:*)",
      "Bash(yarn run:*)",
      "Bash(pytest:*)",
      "Bash(jest:*)",
      "WebFetch"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf /)",
      "Bash(chmod 777:*)",

      "Read(*.lock)",
      "Grep(*.lock)",
      "Edit(*.lock)",

      "Read(**/*application-dev.yml)",
      "Read(**/*application-prod.yml)",
      "Read(**/*application-test.yml)",
      "Read(**/*application-preview.yml)",
      "Grep(**/*application-dev.yml)",
      "Grep(**/*application-prod.yml)",
      "Grep(**/*application-test.yml)",
      "Grep(**/*application-preview.yml)",

      "Read(**/.env)",
      "Read(**/.env.*)",
      "Grep(**/.env)",
      "Grep(**/.env*)"
    ]
  }
}
